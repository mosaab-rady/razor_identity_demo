@page
@model CreateRoleModel
@{
	ViewData["Title"] = "Create Role";
}

<div class="row">
	<div class="col-md-6">
		<form method="post">
			<div class="text-danger" asp-validation-summary="All"></div>
			<div class="form-group">
				<label asp-for="role.RoleName" class="form-label"></label>
				<input asp-for="role.RoleName" class="form-control">
				<span asp-validation-for="role.RoleName" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-outline-primary">Create Role</button>
		</form>
	</div>
</div>